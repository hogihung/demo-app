<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
      <h2>Create an Account</h2>

      <%= form_for @account do |f| %>
        <%= f.fields_for :owner do |own| %>
          <%= form_group_for own, :name do %>
            <%= own.text_field :name, class: 'form-control' %>
          <% end %>
          <%= form_group_for own, :email do %>
            <%= own.text_field :email, class: 'form-control' %>
          <% end %>
          <%= form_group_for own, :password do %>
            <%= own.password_field :password, class: 'form-control' %>
          <% end %>
          <%= form_group_for own, :password_confirmation do %>
            <%= own.password_field :password_confirmation, class: 'form-control' %>
          <% end %>
        <% end %>

        <%= form_group_for f, :subdomain do %>
          <div class="input-group">
            <%= f.text_field :subdomain, class: 'form-control' %>
            <span class="input-group-addon">.demoapp.dev</span>
          </div>
        <% end %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>


